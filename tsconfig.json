{
  "compilerOptions": {
    "target": "es2022",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@bootstrap/*": ["src/bootstrap/*"],
      "@db/*": ["src/db/*"],
      "@core/*": ["src/core/*"],
      "@dtos/*": ["src/dtos/*"],
      "@config/*": ["src/config/*"],
      "@controllers/*": ["src/controllers/*"],
      "@services/*": ["src/services/*"],
      "@repo/*": ["src/repositories/*"],
      "@routes/*": ["src/routes/*"],
      "@models/*": ["src/models/*"],
      "@types/*": ["src/@types/*"],
      "@utils/*": ["src/utils/*"],
      "@scripts/*": ["src/scripts/*"],
      "@common/*": ["src/common/*"],
      "@middlewares/*": ["src/middlewares/*"]
    }
  },
  "ts-node": {
    "transpileOnly": true,
    "require": ["tsconfig-paths/register"],
    "files": true
  },
  "include": ["src/**/*","main.ts", "tests/services"],
  "exclude": ["node_modules"]
}